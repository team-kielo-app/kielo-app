{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"],
      "@assets/*": ["assets/*"],
      "@components/*": ["components/*"],
      "@constants/*": ["constants/*"],
      "@entities/*": ["entities/*"],
      "@features/*": ["features/*"],
      "@pagination/*": ["pagination/*"],
      "@utils/*": ["utils/*"],
      "@hooks/*": ["hooks/*"],
      "@lib/*": ["lib/*"],
      "@store/*": ["store/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "src/entities/reducer.js"
  ],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
